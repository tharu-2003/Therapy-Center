<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="750.0" prefWidth="1170.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ijse.gdse72.therapycenter.controller.TherapyProgramController">
    <children>
        <Pane prefHeight="750.0" prefWidth="1170.0" />
        <Pane prefHeight="750.0" prefWidth="1170.0">
            <children>
                <Label layoutX="69.0" layoutY="129.0" prefHeight="25.0" prefWidth="174.0" text="Program ID">
                    <font><Font name="System Bold" size="15.0" /></font>
                </Label>
                <TextField fx:id="txtProgramId" layoutX="234.0" layoutY="129.0" prefHeight="25.0" prefWidth="218.0" />

                <ImageView fx:id="imgSearch" fitHeight="19.0" fitWidth="19.0" layoutX="470.0" layoutY="132.0" onMouseClicked="#searchOnAction" pickOnBounds="true" preserveRatio="true">
                    <image><Image url="@../icons/search.png" /></image>
                </ImageView>

                <Label layoutX="69.0" layoutY="179.0" text="Program Name">
                    <font><Font name="System Bold" size="15.0" /></font>
                </Label>
                <TextField fx:id="txtProgramName" layoutX="234.0" layoutY="179.0" prefHeight="25.0" prefWidth="218.0" />

                <Label layoutX="69.0" layoutY="230.0" text="Duration ">
                    <font><Font name="System Bold" size="15.0" /></font>
                </Label>
                <TextField fx:id="txtDuration" layoutX="234.0" layoutY="230.0" prefHeight="25.0" prefWidth="218.0" />

                <Label layoutX="554.0" layoutY="129.0" text="Cost ">
                    <font><Font name="System Bold" size="15.0" /></font>
                </Label>
                <TextField fx:id="txtCost" layoutX="722.0" layoutY="129.0" prefHeight="25.0" prefWidth="259.0" />

                <Label layoutX="554.0" layoutY="230.0" text="Description">
                    <font><Font name="System Bold" size="15.0" /></font>
                </Label>
                <TextArea fx:id="txtDescription" layoutX="722.0" layoutY="230.0" prefHeight="76.0" prefWidth="259.0" />

                <Label layoutX="554.0" layoutY="181.0" text="Assign Therapist">
                    <font><Font name="System Bold" size="15.0" /></font>
                </Label>

                <Button fx:id="btnSave" layoutX="496.0" layoutY="370.0" onAction="#saveOnAction" prefHeight="36.0" prefWidth="197.0" style="-fx-background-color: black; -fx-background-radius: 20;" text="Save" textFill="WHITE">
                    <font><Font name="System Bold Italic" size="16.0" /></font>
                </Button>
                <Button fx:id="btnUpdate" layoutX="735.0" layoutY="370.0" onAction="#updateOnAction" prefHeight="36.0" prefWidth="197.0" style="-fx-background-color: black; -fx-background-radius: 20;" text="Update" textFill="WHITE">
                    <font><Font name="System Bold Italic" size="16.0" /></font>
                </Button>
                <Button fx:id="btnDelete" layoutX="960.0" layoutY="370.0" onAction="#deleteOnAction" prefHeight="36.0" prefWidth="197.0" style="-fx-background-color: black; -fx-background-radius: 20;" text="Delete" textFill="WHITE">
                    <font><Font name="System Bold Italic" size="16.0" /></font>
                </Button>

                <TableView fx:id="tblPrograms" layoutX="44.0" layoutY="430.0" onMouseClicked="#tableClickOnAction" prefHeight="300.0" prefWidth="1080.0">
                    <columns>
                        <TableColumn fx:id="colProgramId" prefWidth="100.0" text="Program ID" />
                        <TableColumn fx:id="colName" prefWidth="200.0" text="Name" />
                        <TableColumn fx:id="colDuration" prefWidth="120.0" text="Duration" />
                        <TableColumn fx:id="colCost" prefWidth="120.0" text="Cost" />
                        <TableColumn fx:id="colDescription" prefWidth="240.0" text="Description" />
                        <TableColumn fx:id="colTherapists" prefWidth="300.0" text="Therapists" />
                    </columns>
                </TableView>

                <Label alignment="CENTER" layoutX="280.0" layoutY="30.0" prefHeight="46.0" prefWidth="612.0" text="Therapy Program Management">
                    <font><Font name="Palatino Linotype Bold" size="30.0" /></font>
                </Label>
            <Button fx:id="btnRefresh" layoutX="255.0" layoutY="370.0" mnemonicParsing="false" onAction="#refreshOnAction" prefHeight="36.0" prefWidth="197.0" style="-fx-background-color: black; -fx-border-radius: 20; -fx-background-radius: 20;" text="Refresh" textFill="WHITE">
               <font>
                  <Font name="System Bold Italic" size="16.0" />
               </font>
            </Button>
            <ComboBox fx:id="cmbTherapists" layoutX="722.0" layoutY="179.0" prefHeight="25.0" prefWidth="259.0" />
            </children>
        </Pane>
    </children>
</AnchorPane>
